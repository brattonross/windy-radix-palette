{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "windy-radix-palette",
	"version": "1.0.0",
	"description": "Bring Radix Colors to Tailwind CSS",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"repository": {
		"url": "https://github.com/brattonross/windy-radix-palette",
		"directory": "packages/palette"
	},
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"tailwindcss",
		"plugin",
		"radix-ui"
	],
	"files": [
		"dist"
	],
	"author": "Ross Bratton <bratton.ross@gmail.com>",
	"license": "MIT",
	"scripts": {
		"dev": "tsup ./src/index.ts --clean --dts --watch",
		"build": "tsup ./src/index.ts --clean --dts --external @radix-ui/colors --external tailwindcss",
		"test": "vitest"
	},
	"peerDependencies": {
		"@radix-ui/colors": ">=3.0.0",
		"tailwindcss": ">=3.0.0"
	},
	"devDependencies": {
		"@radix-ui/colors": "3.0.0",
		"tailwindcss": "^3.3.3",
		"tsup": "^7.2.0",
		"vite": "^4.4.11",
		"vitest": "^0.34.6"
	}
}
